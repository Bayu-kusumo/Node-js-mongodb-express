<%- include('layoutlogin/header') %>
<div class="container">
    <form action="/auth/login" method="POST">
        <h2>Login</h2>

        <!-- fill email -->
        <div class="form-floating mb-3">
            <input type="name" name="name" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Name</label>
          </div>

          <!-- fill the password -->
          <div class="form-floating">
            <label for="validationDefault01" class="form-label"></label>
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>

          <!-- submit button -->
        <button type="submit" class="btn">Login</button>
    </form>
    <div class="want-to-signup">
        Dont have an account yet? <a href="/register" class="register-link">Register</a>
    </div>
</div>
<%- include('layoutlogin/footer') %>