<%- include('layout/header') %>
<style>
  body{
    background-image: url('/images/Iphone\ wallpaper\ backgrounds_\ aesthetic\ background.jpg');
    overflow: hidden;
  }
</style>
<div class="row g-3 p-3" style="width: 800px; margin: auto; margin-top: 30px;">
  <form action="/add" method="POST" enctype="application/x-www-form-urlencoded"> 
    <h2>Add User</h2>

    <div class="form-floating mb-3">
        <input type="text" name="name" class="form-control" id="floatingUsername" placeholder="username">
        <label for="floatingUsername">Username</label>
      </div>

    <!-- ask for email -->
    <div class="form-floating mb-3">
        <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
        <label for="floatingInput">Email address</label>
      </div>

      <!-- ask for User password -->
      <div class="form-floating mb-3">
        <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPassword">Password</label>
      </div>

      <!-- ask for phone number -->
      <div class="form-floating" style="margin-bottom: 40px;">
        <input type="text" name="phone" class="form-control" id="floatingPassword" placeholder="Password">
        <label for="floatingPhoneNumber">Phone Number</label>
      </div>
      <div class="d-grid gap-2">
    <button type="submit" class="btn btn-primary">Add User</button>
      </div>
</form>
</div>

<%- include('layout/footer') %>