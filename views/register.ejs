<%- include('layoutlogin/header') %>

<div class="container-register">
    <form action="/auth/register" method="POST" enctype="application/x-www-form-urlencoded"> 
        <h2>Sign Up</h2>

        <div class="form-floating mb-3">
            <input type="text" name="name" class="form-control" id="floatingUsername" placeholder="username">
            <label for="floatingUsername">Username</label>
          </div>

        <!-- ask for email -->
        <div class="form-floating mb-3">
            <input type="email" name="email" class="form-control" id="floatingInput" placeholder="name@example.com">
            <label for="floatingInput">Email address</label>
          </div>

          <!-- ask for User password -->
          <div class="form-floating mb-3">
            <input type="password" name="password" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Password</label>
          </div>
          <!-- confirmation of password -->
          <div class="form-floating mb-3">
            <input type="password" name="passwordConfirm" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPassword">Confirm Password</label>
          </div>

          <!-- ask for phone number -->
          <div class="form-floating">
            <input type="text" name="phone" class="form-control" id="floatingPassword" placeholder="Password">
            <label for="floatingPhoneNumber">Phone Number</label>
          </div>
        <button type="submit" class="btn">Sign Up</button>
    </form>
</div>


<%- include('layoutlogin/footer') %>